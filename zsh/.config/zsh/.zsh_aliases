alias reload=". $ZDOTDIR/.zshrc && print 'Zsh configuration file reloaded\n'"

# Replace ls with exa
alias ls="eza --icons --group-directories-first"
alias la="ls --all -l"
alias tree="ls --all --tree"

# Navigation
alias ..="cd ../"
alias ..2="cd ../../"
alias ..3="cd ../../../"
alias ..4="cd ../../../../"
alias ..5="cd ../../../../../"

# Point xdg-open to an alias
alias open="xdg-open"

# Rerouting programs
alias nv=nvim

